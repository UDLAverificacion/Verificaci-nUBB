    <script>
        function validateCertificate() {
            // Oculta el formulario y muestra los resultados
            document.getElementById('formSection').style.display = 'none';
            document.getElementById('resultado').style.display = 'block';
            
            // Oculta el título y descripción principal para una vista más limpia
            document.getElementById('mainTitle').style.display = 'none';
            document.getElementById('mainDescription').style.display = 'none';

            // Desplazamiento a la sección de resultados
            document.getElementById('resultado').scrollIntoView({ behavior: 'smooth' });
        }

        function resetForm() {
            // Muestra el formulario y oculta los resultados
            document.getElementById('formSection').style.display = 'block';
            document.getElementById('resultado').style.display = 'none';
            
            // Muestra el título y descripción principal
            document.getElementById('mainTitle').style.display = 'block';
            document.getElementById('mainDescription').style.display = 'block';

            // Limpia los campos del formulario, si es necesario, o usa la función nativa de HTML
            document.getElementById('validationForm').reset();
            
            // Desplazamiento al inicio de la página
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>

